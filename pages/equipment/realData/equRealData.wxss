.container {
  display: flex;
  flex-direction: row;
  margin-top: 8%;
  height: 60%;
}

.left {
  font-family: "黑体";
  color: #888;
  font-size: 40rpx;
  width: 51%;
}

.right {
  font-family: "黑体";
  color: #888;
  font-size: 40rpx;
  width: 49%;
}

.th1 {
  display: flex;
  width: 381rpx;
  height: 58rpx;
  border-right: 1rpx solid rgba(218, 217, 217, 1);
  border-top: 1rpx solid rgba(218, 217, 217, 1);
  justify-content: left;
  align-items: center;
  overflow-x: auto;
  font-size: 36rpx;
}

.th2 {
  display: flex;
  width: 381rpx;
  height: 68rpx;
  border-right: 1rpx solid rgba(218, 217, 217, 1);
  border-top: 1rpx solid rgba(218, 217, 217, 1);
  border-bottom: 1rpx solid rgba(218, 217, 217, 1);
  justify-content: left;
  align-items: center;
  overflow-x: auto;
  font-size: 36rpx;
}

.th3 {
  display: flex;
  width: 100%;
  height: 58rpx;
  border-right: 1rpx solid rgba(218, 217, 217, 1);
  border-top: 1rpx solid rgba(218, 217, 217, 1);
  justify-content: left;
  align-items: center;
  overflow-x: auto;
  font-size: 36rpx;
  color: #888;
}

.line {
  background-color: #f2f2f2;
  height: 1rpx;
}

button {
  padding: 2px 12px;
}

.btn {
  width: 60%;
  margin-top: 30rpx;
  background-color: #1B71BA;
  color: #FFF;
  font-size: 14px;
  padding: 2px 2px;
  height: 26px;
}

.btn::after {
  border: 0;
}

.btn_hover {
  background-color: #Abbbca;
}

.table {
  margin-top: -27px;
 }
 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
 }
 .td {
  width:20px;
  height: 6%;
 }

 .table_header {
  display: inline-flex;
  width: 100%;
}

.thb {
  display: flex;
  width: 90%;
  height: 90rpx;
  font-size: 12px;
  border-right: 1rpx solid white;
  justify-content: center;
  align-items: center;
  overflow-x: auto;
  margin-top: 20px;
}

.scrolldb {
  height: calc(100% - 350rpx);
}