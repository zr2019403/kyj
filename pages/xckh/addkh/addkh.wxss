@import "../../../weui/imgsUpload.wxss";
page{
  width: 100%;
  height: 100%;
}
#body{
  width: 100%;
  height: 100%;
}
.contentnr{
   margin:36rpx 34rpx;
   height:calc(100% - 184rpx);
}
.section{
  width: 100%;
}
.section__title{
    font-size: 32rpx;
    color: #333;
}
.pknr{
  width: 100%;
}
.picker{
  width: 100%;
}
.fb-type{
  width: 98%;
}
.fb-type{
  height: 68rpx;
  background: #fff;
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid #F3F3F3;
  padding-left: 10rpx;
}
.read{
  background-color: #F3F3F3;
}

.fb-type .type-label{
  height: 38rpx;
  flex: 1;
  color: #333;
  font-size: 32rpx;
}
.type-label{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.fb-type .type-icon{
  height: 38rpx;
  width: 38rpx;
  margin-right:10rpx;
}
.message{
  height: 200rpx;
  width: 100%;
  font-size: 32rpx;
  margin-top: 26rpx;
  border: 1px solid #F3F3F3;
}
.nb {
  float: right;
  color: #d3d3d3;
  margin-top: -50rpx;
  margin-right: 1%;
  font-size: 32rpx;
}
/* 图片 */

.imgs {
  margin: 30rpx 0;
  width: 100%;
  height: 30%;
  margin-bottom: 12%;
  overflow-y: scroll;
  border: 1px solid #f3f3f3;

}
#footbtn{
   width: 100%;
  position: fixed;
  bottom: 0;
}

#cancel,#donext{
  width: 50%;
  float: left;
  text-align: center;
  font-size: 30rpx;
  height: 92rpx;
  line-height: 98rpx;
  color: #fff;
  border-radius: 0; 
}

#cancel{
  background-color:#D2D2D2;
  }

#donext{
  background-color:#017AD7

}